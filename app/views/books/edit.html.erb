<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @book.errors.any? %>
        <h3>
          <%= @book.errors.count %>error prohibited this obj from being saved:
        </h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book, method: :patch do |f| %>
        <h1>Editing Book</h1>
        <div class="field">
          <p>Title</p>
            <%= f.text_field :title %>
          <p>opinion</p>
            <%= f.text_area :body %>
        </div>
        <%= f.submit 'Update Book', class: 'btn btn-success btn-sm' %>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %>|
      <%= link_to 'Back', '/books' %>
    </div>
  </div>
</div>


